@model PessoalResponse;
@{
    ViewData["Title"] = "Index";

	if (TempData["Message"] is not null)
	{
		<br>
		<h6 style="color:red">@TempData["Message"]</h6>
	}
}
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Nome
            </th>
			<th>
				<a class="btn btn-success mx-2" asp-controller="Pessoal" asp-action="Cadastro">Cadastrar</a>
                <a class="btn btn-dark mx-2" asp-controller="Pessoal" asp-action="Desativados">Funcionario Desativados</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.ResponseObject)
        {
            <tr>
                <td width="20%">
                    @obj.Id
                </td>
                <td width="50%">
                    @obj.Name
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a class="btn btn-info mx-2" asp-controller="Pessoal" asp-action="Detail" asp-route-id="@obj.Id">Detalhes</a>
                        <a class="btn btn-danger mx-2" asp-controller="Pessoal" asp-action="ConfirmDelete" asp-route-id="@obj.Id">Delete</a>
                        <a class="btn btn-warning mx-2" asp-controller="Pessoal" asp-action="Editar" asp-route-id="@obj.Id">Editar</a>
                        <a class="btn btn-dark mx-2" asp-controller="Pessoal" asp-action="Desativar" asp-route-id="@obj.Id">Desativar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>
