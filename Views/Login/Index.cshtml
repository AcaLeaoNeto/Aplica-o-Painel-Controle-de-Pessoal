@model Login;

@if (Context.Request.Cookies["TKA"] is not null)
		Context.Response.Redirect("Pessoal");
<div style="text-align: center; position: absolute; width:60%">
	<form method="post" asp-controller="Login" asp-action="Login" style="display: inline-block; position: relative;">
		<label asp-for="Username">Username</label><br>
		<input type="email" asp-for="Username" placeholder="Username Account" required>
		<br><br>
		<label asp-for="Password">Password</label><br>
		<input type="password" asp-for="Password" placeholder="Enter Password" required>
		<br><br>
		<button type="submit">Login</button>
	</form>
</div>
@{
	if (TempData["Message"] is not null)
	{
		<br>
		<h6 style="color:red">@TempData["Message"]</h6>
	}
}